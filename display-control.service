[Unit]
Description=Handle Display Control
Requires=run-display.service
After=run-display.service

[Service]
Type=simple
ExecStart=/home/lamptimer/display_control.sh
KillMode=control-group
Restart=on-failure
TimeoutSec=infinity
User=lamptimer
Group=lamptimer

[Install]
WantedBy=run-display.service
